<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/forms.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
    />
    <title>SESP - Create Performance</title>
  </head>
  <body>
    <div class="container">
      <nav class="sidebar">
        <div class="logo">
          <h2>SESP</h2>
        </div>
        <ul class="nav-links">
          <li>
            <a href="/student/homepage"
              ><i class="fas fa-home"></i> Dashboard</a
            >
          </li>
          <li>
            <a href="/evaluation/myevaluation/<%= user._id %>"
              ><i class="fas fa-chart-line"></i> My Evaluations</a
            >
          </li>
          <li>
            <a href="/performance/myperformance/<%= user._id %>"
              ><i class="fas fa-graduation-cap"></i> My Performance</a
            >
          </li>
          <li>
            <a href="/evaluation/create"
              ><i class="fas fa-plus-circle"></i> New Evaluation</a
            >
          </li>
          <li class="active">
            <a href="/performance/create"
              ><i class="fas fa-plus-circle"></i> New Performance</a
            >
          </li>
          <li>
            <a href="/student/logout"
              ><i class="fas fa-sign-out-alt"></i> Logout</a
            >
          </li>
        </ul>
        <div class="user-info">
          <div class="avatar">
            <i class="fas fa-user-circle"></i>
          </div>
          <div class="user-details">
            <h4><%= user.fullname %></h4>
            <p><%= user.department %></p>
          </div>
        </div>
      </nav>

      <div class="main-content">
        <header>
          <h1>Record Course Performance</h1>
          <div class="user-welcome">
            <p>Welcome back, <%= user.fullname %></p>
          </div>
        </header>

        <div class="server-msg">
          <% if(hasErr){%> <% errMsg.forEach(message =>{ %>
          <p class="has-error">
            <i class="fas fa-exclamation-circle"></i> <%= message%>
          </p>
          <% })%> <% } %> <% if(hasSuccess){%> <% successMsg.forEach(message =>{
          %>
          <p class="has-success">
            <i class="fas fa-check-circle"></i> <%= message%>
          </p>
          <% })%> <% } %>
        </div>

        <div class="form-container">
          <div class="form-header">
            <h2>
              <i class="fas fa-graduation-cap"></i> Course Performance Record
            </h2>
            <p>Track your academic achievements and monitor your progress</p>
          </div>

          <form action="/performance/create" method="post">
            <div class="form-group">
              <label for="course">
                <i class="fas fa-book"></i> Course Name
              </label>
              <input
                type="text"
                id="course"
                name="course"
                required
                placeholder="Enter course name"
              />
            </div>

            <div class="form-group">
              <label for="grade"> <i class="fas fa-award"></i> Grade </label>
              <select id="grade" name="grade" required>
                <option value="" disabled selected>Select your grade</option>
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
                <option value="D">D</option>
                <option value="E">E</option>
                <option value="F">F</option>
              </select>
            </div>

            <div class="form-group">
              <label for="score">
                <i class="fas fa-percent"></i> Score (0-100)
              </label>
              <input
                type="number"
                id="score"
                name="score"
                min="0"
                max="100"
                required
                placeholder="Enter your score (0-100)"
              />
            </div>

            <div class="form-group">
              <label for="attendance">
                <i class="fas fa-calendar-check"></i> Attendance (%)
              </label>
              <input
                type="number"
                id="attendance"
                name="attendance"
                min="0"
                max="100"
                required
                placeholder="Enter your attendance percentage"
              />
            </div>

            <div class="form-actions">
              <button type="submit" class="btn-submit">
                <i class="fas fa-save"></i> Save Performance
              </button>
              <a href="/student/homepage" class="btn-cancel">
                <i class="fas fa-times"></i> Cancel
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
